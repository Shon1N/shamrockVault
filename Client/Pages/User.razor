@page "/user"
@inherits ShamrockVault.Client.Pages.UserBase
<div class="page-ribbon">
    <h3>Users</h3>
</div>
<a class="btn btn-primary btn-lg btn-block" href="productadd">Add new user</a>
<div class="card-deck">
    @if (@Users != null)
    {
        @foreach (var user in Users)
        {
            <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
                <div class="card-header">
                    <h3>@user.UserName</h3>
                </div>
                <div class="card-text">
                    Email: @user.Email
                </div>
                <div class="card-footer text-center">
                    <a href="@($"useredit/{user.UserId}")" class="btn btn-primary m-1">edit</a>
                    <a @onclick="() => DeleteUser(user.UserId)" class="btn btn-danger m-1">Delete</a>
                </div>
            </div>
        }
    }
    else
    {
        <div class="spinner"></div>
    }
</div>